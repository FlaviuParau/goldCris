<?xml version="1.0"?>
<layout version="0.1.0">

    <default>
        <reference name="before_body_end">
            <block type="blugento_marketing/marketing" name="marketing_remarketing_before" template="blugento/marketing/remarketing_before.phtml" />
        </reference>
        <reference name="after_body_start">
            <block type="blugento_marketing/marketing" name="marketing_remarketing_after" template="blugento/marketing/remarketing_after.phtml" />
        </reference>
    </default>

    <catalog_product_view>
        <reference name="before_body_end">
            <block type="blugento_marketing/dynamic" name="marketing_dynamic" template="blugento/marketing/dynamic.phtml" />
        </reference>
    </catalog_product_view>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="blugento_marketing/marketing" name="marketing_conversion" template="blugento/marketing/conversion.phtml" />
        </reference>
    </checkout_onepage_success>

    <checkout_multishipping_success>
        <reference name="before_body_end">
            <block type="blugento_marketing/marketing" name="marketing_conversion" template="blugento/marketing/conversion.phtml" />
        </reference>
    </checkout_multishipping_success>

    <checkout_onepage_index>
        <reference name="before_body_end">
            <block type="blugento_marketing/checkout" name="marketing_checkout" template="blugento/marketing/checkout.phtml" />
        </reference>
    </checkout_onepage_index>

    <checkout_cart_index>
        <reference name="before_body_end">
            <block type="blugento_marketing/checkout" name="marketing_cart" template="blugento/marketing/cart.phtml" />
        </reference>
    </checkout_cart_index>

</layout>
