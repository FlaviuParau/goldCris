<?xml version="1.0"?>
<config>
    <modules>
        <Cadence_Fbpixel>
            <version>0.1.1</version>
        </Cadence_Fbpixel>
    </modules>
    <global>
        <models>
            <cadence_fbpixel>
                <class>Cadence_Fbpixel_Model</class>
                <resourceModel>cadence_fbpixel_resource</resourceModel>
            </cadence_fbpixel>
            <cadence_fbpixel_resource>
                <class>Cadence_Fbpixel_Model_Resource</class>
            </cadence_fbpixel_resource>
        </models>
        <blocks>
            <cadence_fbpixel>
                <class>Cadence_Fbpixel_Block</class>
            </cadence_fbpixel>
        </blocks>
        <helpers>
            <cadence_fbpixel>
                <class>Cadence_Fbpixel_Helper</class>
            </cadence_fbpixel>
        </helpers>
        <resources>
            <cadence_fbpixel_setup>
                <setup>
                    <module>Cadence_Fbpixel</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </cadence_fbpixel_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <cadence_fbpixel>
                    <file>cadence_fbpixel.xml</file>
                </cadence_fbpixel>
            </updates>
        </layout>
        <events>
            <catalog_controller_category_init_after>
                <observers>
                    <cadence_fbpixel_view_category>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onInitiateCategory</method>
                    </cadence_fbpixel_view_category>
                </observers>
            </catalog_controller_category_init_after>
            <sales_quote_product_add_after>
                <observers>
                    <cadence_fbpixel_add_to_cart>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onSalesQuoteProductAddAfter</method>
                    </cadence_fbpixel_add_to_cart>
                </observers>
            </sales_quote_product_add_after>
            <wishlist_add_product>
                <observers>
                    <cadence_fbpixel_add_to_wishlist>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onWishlistAddProduct</method>
                    </cadence_fbpixel_add_to_wishlist>
                </observers>
            </wishlist_add_product>
            <controller_action_predispatch_checkout_multishipping_index>
                <observers>
                    <cadence_fbpixel_initiate_checkout_multi>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onInitiateCheckout</method>
                    </cadence_fbpixel_initiate_checkout_multi>
                </observers>
            </controller_action_predispatch_checkout_multishipping_index>
            <controller_action_predispatch_checkout_onepage_index>
                <observers>
                    <cadence_fbpixel_initiate_checkout_onepage>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onInitiateCheckout</method>
                    </cadence_fbpixel_initiate_checkout_onepage>
                </observers>
            </controller_action_predispatch_checkout_onepage_index>
            <controller_action_predispatch_catalogsearch_result_index>
                <observers>
                    <cadence_fbpixel_search>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onSearch</method>
                    </cadence_fbpixel_search>
                </observers>
            </controller_action_predispatch_catalogsearch_result_index>
            <catalog_controller_product_init_after>
                <observers>
                    <cadence_fbpixel_product_init_after>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onCatalogControllerProductInitAfter</method>
                    </cadence_fbpixel_product_init_after>
                </observers>
            </catalog_controller_product_init_after>
            <sales_order_place_after>
                <observers>
                    <cadence_fbpixel_place_order>
                        <class>Cadence_Fbpixel_Model_Observer</class>
                        <method>onPlaceOrder</method>
                    </cadence_fbpixel_place_order>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <default>
        <cadence_fbpixel>
            <visitor>
                <enabled>0</enabled>
            </visitor>
            <conversion>
                <enabled>0</enabled>
            </conversion>
            <analytics>
                <category>3</category>
            </analytics>
        </cadence_fbpixel>
    </default>
</config>