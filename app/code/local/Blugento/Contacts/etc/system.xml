<config>
    <sections>
        <contacts>
            <groups>
                <content>
                    <label>Blugento Contacts Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <template translate="label">
                            <label>Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blugento_contacts/adminhtml_system_config_source_template</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                        <cms_page translate="label,comment">
                            <label>CMS Contact Page</label>
                            <comment>Used if Blugento template is set</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>blugento_localizer/source_cms_page</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_page>
                        <cms_block translate="label,comment">
                            <label>CMS Block Above Contact Form</label>
                            <comment>Used if Default template is set</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>blugento_contacts/adminhtml_system_config_source_cms_block</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_block>
                    </fields>
                </content>
            </groups>
        </contacts>
    </sections>
</config>