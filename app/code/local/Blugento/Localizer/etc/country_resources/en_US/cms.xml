<config>
    <default>
        <localizer>
            <pages>
                <default>
                    <localizer_shipping>
                        <execute>1</execute>
                        <backup>0</backup>
                        <filename>localizer/page/shipping.html</filename>
                        <footerlink>1</footerlink>
                        <footerlinkcolumn>2</footerlinkcolumn>
                        <config_option>catalog/price/cms_page_shipping</config_option>
                    </localizer_shipping>
                    <localizer_privacy>
                        <execute>1</execute>
                        <backup>0</backup>
                        <filename>localizer/page/privacy.html</filename>
                        <footerlink>1</footerlink>
                        <footerlinkcolumn>1</footerlinkcolumn>
                    </localizer_privacy>
                    <localizer_cookie_policy>
                        <execute>1</execute>
                        <backup>0</backup>
                        <filename>localizer/page/cookie_policy.html</filename>
                        <footerlink>1</footerlink>
                        <footerlinkcolumn>1</footerlinkcolumn>
                    </localizer_cookie_policy>
                    <localizer_404>
                        <execute>1</execute>
                        <backup>0</backup>
                        <filename>localizer/page/404.html</filename>
                        <footerlink>0</footerlink>
                        <footerlinkcolumn>0</footerlinkcolumn>
                    </localizer_404>
                    <localizer_contact>
                        <execute>1</execute>
                        <backup>0</backup>
                        <filename>localizer/page/contact.html</filename>
                        <footerlink>0</footerlink>
                        <footerlinkcolumn>0</footerlinkcolumn>
                    </localizer_contact>
                </default>
            </pages>

            <blocks>
                <default>
                    <business_terms>
                        <execute>1</execute>
                        <backup>0</backup>
                        <identifier>business_terms</identifier>
                        <filename>localizer/block/business_terms.html</filename>
                    </business_terms>
                    <footerlinks>
                        <execute>1</execute>
                        <backup>0</backup>
                        <identifier>footer_links</identifier>
                    </footerlinks>
                    <contacts_info>
                        <execute>1</execute>
                        <backup>0</backup>
                        <identifier>contacts_info</identifier>
                        <filename>localizer/block/contacts_info.html</filename>
                    </contacts_info>
                </default>
            </blocks>

            <footerlinks>
                <default>
                    <anpc>
                        <execute>1</execute>
                        <extern>1</extern>
                        <title>ANPC</title>
                        <path>http://www.anpc.gov.ro</path>
                        <nofollow>1</nofollow>
                        <footerlinkcolumn>1</footerlinkcolumn>
                    </anpc>
                </default>
            </footerlinks>
        </localizer>
    </default>
</config>
