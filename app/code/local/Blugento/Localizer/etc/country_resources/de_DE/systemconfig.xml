<config>
    <default>
        <localizer>
            <system_config>
                <default>
                    <customer__create_account__confirm>0</customer__create_account__confirm>
                    <newsletter__subscription__confirm>1</newsletter__subscription__confirm>
                    <catalog__price__display_block_below_price>1</catalog__price__display_block_below_price>
                    <catalog__price__cms_page_shipping><![CDATA[versand]]></catalog__price__cms_page_shipping>
                    <catalog__price__including_shipping_costs>0</catalog__price__including_shipping_costs>
                    <catalog__custom_options__date_fields_order>d,m,y</catalog__custom_options__date_fields_order>
                    <catalog__custom_options__time_format><![CDATA[24h]]></catalog__custom_options__time_format>
                    <checkout__cart__configurable_product_image><![CDATA[itself]]></checkout__cart__configurable_product_image>
                    <!--<general__region__state_required>CA,US</general__region__state_required>-->
                    <sales__reorder__allow>0</sales__reorder__allow>
                    <design__footer__copyright><![CDATA[&copy; {{year}} {{shop_name}}.]]></design__footer__copyright>

                    <!-- Social media settings -->
                    <blugento_socialmedia__share_settings__enabled>1</blugento_socialmedia__share_settings__enabled>
                    <blugento_socialmedia__share_media_facebook__facebookurl><![CDATA[https://www.facebook.com/Blugento-de-517932304967646]]></blugento_socialmedia__share_media_facebook__facebookurl>
                    <blugento_socialmedia__share_media_twitter__twitterurl><![CDATA[https://twitter.com/blugento]]></blugento_socialmedia__share_media_twitter__twitterurl>

                    <!-- First Day -->
                    <general__locale__firstday>1</general__locale__firstday>

                    <!-- Checkout agreements -->
                    <checkout__options__enable_agreements>1</checkout__options__enable_agreements>

                    <!-- Hide middlename -->
                    <customer__address__middlename_show>0</customer__address__middlename_show>
                    
                    <!-- Baseprice settings -->
                    <catalog__baseprice__base_price_incl_tax>1</catalog__baseprice__base_price_incl_tax>
                    <catalog__baseprice__frontend_label><![CDATA[entspricht {{baseprice}} pro {{reference_amount}} {{reference_unit}}]]></catalog__baseprice__frontend_label>
                    <catalog__baseprice__short_label><![CDATA[={{baseprice}} / {{reference_amount}} {{reference_unit_short}}]]></catalog__baseprice__short_label>

                    <!-- Set invoice template in Blugento PDF module -->
                    <sales_pdf__invoice__item_price_column_order><![CDATA[price,qty,tax,subtotal]]></sales_pdf__invoice__item_price_column_order>
                    
                    <!-- Carriers -->
                    <carriers__ups__active>0</carriers__ups__active>
                    <carriers__usps__active>0</carriers__usps__active>
                    <carriers__fedex__active>0</carriers__fedex__active>
                    <carriers__dhl__active>0</carriers__dhl__active>
                    <carriers__dhlint__active>0</carriers__dhlint__active>

                    <!-- Allowed data feeds -->
                    <blugentolocalizer__data_feeds__feeds><![CDATA[]]></blugentolocalizer__data_feeds__feeds>
                    <blugentolocalizer__data_feeds__enabled>0</blugentolocalizer__data_feeds__enabled>

                    <!-- Contact page -->
                    <contacts__content__cms_page>kontakt</contacts__content__cms_page>
                    <contacts__content__template>blugento</contacts__content__template>

                    <!-- Payment methods -->
                    <payment__free__active>0</payment__free__active>

                    <!-- Catalog SEO -->
                    <catalog_seo__product__use_categories>0</catalog_seo__product__use_categories>

                    <!-- Catalog Search -->
                    <catalog__search__search_type>3</catalog__search__search_type>

                    <!-- Customer address template PDF -->
                    <customer__address_templates__pdf><![CDATA[{{depend company}}{{var company}}|{{/depend}}
{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}|
{{if street1}}{{var street1}}
{{/if}}
{{depend street2}}{{var street2}}|{{/depend}}
{{depend street3}}{{var street3}}|{{/depend}}
{{depend street4}}{{var street4}}|{{/depend}}|
{{if postcode}}{{var postcode}} {{/if}}{{if city}}{{var city}}|{{/if}}]]></customer__address_templates__pdf>
                </default>
            </system_config>
        </localizer>
    </default>
</config>
