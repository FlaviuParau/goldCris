<?xml version="1.0"?>
<config>
    <sections>
        <blugento_orderstatuscolor>
            <label>Order Color Settings</label>
            <tab>blugento</tab>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <order_grid>
                    <label>Order Grid</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <default_status_color>
                            <label>Default Status Color</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_class>color {hash:true,adjust:false}</frontend_class>
                        </default_status_color>
                        <color_whole_row>
                            <label>Color Whole Row</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <tooltip><![CDATA[Turning on this option will colour the background of the whole row rather than just the status label.]]></tooltip>
                        </color_whole_row>
                    </fields>
                </order_grid>
            </groups>
        </blugento_orderstatuscolor>
    </sections>
</config>
