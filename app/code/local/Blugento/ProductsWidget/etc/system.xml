<config>
	<tabs>
		<blugento translate="label">
			<label>Blugento</label>
			<sort_order>20</sort_order>
		</blugento>
	</tabs>
    <sections>
        <blugento_productswidget translate="label" module="blugento_productswidget">
            <class>separator-top</class>
            <label>Products Widget</label>
            <tab>blugento</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<general translate="label">
					<label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						 <enabled translate="label">
							<label>Enabled</label>	
							<comment><![CDATA[Select Yes for display the New Products on frontend.]]></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</enabled>
						<add_jquery translate="label">
							<label>Include jQuery</label>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Select Yes to include the jQuery library.</comment>
						</add_jquery>
						<add_slick translate="label">
							<label>Include Slick</label>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Select Yes to include the Slick library.</comment>
						</add_slick>
					</fields>
				</general>
				<cache translate="label">
					<label>Widget Cache</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enabled</label>
							<comment><![CDATA[Select Yes for display the New Products on frontend.]]></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<category_cache_liftime translate="label">
							<label>Category Cache Lifetime</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Set the widget cache lifetime in seconds.</comment>
						</category_cache_liftime>
						<custom_cache_liftime translate="label">
							<label>Custom Cache Lifetime</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Set the widget cache lifetime in seconds.</comment>
						</custom_cache_liftime>
						<discounted_cache_liftime translate="label">
							<label>Discounted Cache Lifetime</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Set the widget cache lifetime in seconds.</comment>
						</discounted_cache_liftime>
						<new_cache_liftime translate="label">
							<label>New Cache Lifetime</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Set the widget cache lifetime in seconds.</comment>
						</new_cache_liftime>
					</fields>
				</cache>
			</groups>
        </blugento_productswidget>
    </sections>
</config>
