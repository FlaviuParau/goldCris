    <crontab>
        <jobs>
            <blugento_fullfeed>
                <schedule>
                    <cron_expr>*/30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>blugento_fullfeed/feed::cronGenerateFeed</model>
                </run>
            </blugento_fullfeed>

            <blugento_fullfeed_time>
                <schedule>
                    <cron_expr>0 22 * * *</cron_expr>
                </schedule>
                <run>
                    <model>blugento_fullfeed/feed::cronResetCacheTime</model>
                </run>
            </blugento_fullfeed_time>
        </jobs>
    </crontab>
