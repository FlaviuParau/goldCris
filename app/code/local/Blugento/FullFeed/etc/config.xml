    <frontend>
        <translate>
            <modules>
                <Blugento_FullFeed>
                    <files>
                        <default>Blugento_FullFeed.csv</default>
                    </files>
                </Blugento_FullFeed>
            </modules>
        </translate>

        <routers>
            <blugento_fullfeed>
                <use>standard</use>
                <args>
                    <module>Blugento_FullFeed</module>
                    <frontName>fullfeed</frontName>
                </args>
            </blugento_fullfeed>
        </routers>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <blugento_fullfeed before="Mage_Adminhtml">Blugento_FullFeed_Adminhtml</blugento_fullfeed>
                    </modules>
                </args>
            </adminhtml>
        </routers>
