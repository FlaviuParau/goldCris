<config>
    <tabs>
        <blugento translate="label">
            <label>Blugento</label>
            <sort_order>20</sort_order>
        </blugento>
    </tabs>
    <sections>
        <blugento_robotseditor translate="label" module="blugento_robotseditor">
            <label>Robots Editor</label>
            <tab>blugento</tab>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>Robots Editor Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <file_content translate="label">
                            <label>File Content</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <backend_model>blugento_robotseditor/system_config_form_robots</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Edit the robots.txt file content.</comment>
                        </file_content>
                    </fields>
                </general>
            </groups>
        </blugento_robotseditor>
    </sections>
</config>
