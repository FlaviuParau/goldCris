<layout version="0.1.0">
    <PRODUCT_TYPE_grouped>
        <reference name="root">
            <action method="addBodyClass">
                <classname>blugento-grouped</classname>
            </action>
        </reference>

        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>blugento-grouped/js/blugento-grouped.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>blugento-grouped/css/blugento-grouped.css</name>
            </action>
        </reference>

        <reference name="product.info.grouped">
              <action method="setTemplate"><template>blugento_grouped/grouped.phtml</template></action>
        </reference>
    </PRODUCT_TYPE_grouped>
</layout>
