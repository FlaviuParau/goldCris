<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem" ifconfig="blugento_productswidget/general/enabled">
                <type>skin_css</type>
                <name>css/productswidget/productswidget.css</name>
                <params/>
            </action>
            <action method="addJs" ifconfig="blugento_productswidget/general/add_jquery">
                <script>blugento/productswidget/jquery-1.11.3.min.js</script>
            </action>
            <action method="addJs" ifconfig="blugento_productswidget/general/add_jquery">
                <script>blugento/productswidget/noconflict.js</script>
            </action>
            <action method="addItem" ifconfig="blugento_productswidget/general/add_slick">
                <type>skin_css</type>
                <name>css/productswidget/slick-theme.css</name>
                <params/>
            </action>
            <action method="addJs" ifconfig="blugento_productswidget/general/add_slick">
                <script>blugento/productswidget/slick.min.js</script>
            </action>
        </reference>
    </default>
</layout>
