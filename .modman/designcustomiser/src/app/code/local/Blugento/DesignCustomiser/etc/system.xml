<config>
    <tabs>
        <blugento translate="label">
            <label>Blugento</label>
            <sort_order>10</sort_order>
        </blugento>
    </tabs>
    <sections>
        <blugento_designcustomiser translate="label" module="blugento_designcustomiser">
            <label>Scss Settings</label>
            <tab>blugento</tab>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <scss translate="label">
                    <label>Scss Main Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <definition_filename translate="label comment">
                            <label>Scss definition filename</label>
                            <comment />
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </definition_filename>
                        
                        <definition_file_extension translate="label comment">
                            <label>Extension of Scss definition filename</label>
                            <comment />
                            <frontend_type>select</frontend_type>
                            <source_model>blugento_designcustomiser/system_config_source_scss_definition_extension</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </definition_file_extension>
                        
                        <definition_store translate="label comment">
                            <label>Store theme</label>
                            <comment />
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_store</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </definition_store>
                        
                        <definition_directory_theme translate="label comment">
                            <label>Directory of the Scss definition filename is placed</label>
                            <comment />
                            <frontend_type>select</frontend_type>
                            <source_model>blugento_designcustomiser/system_config_source_scss_definition_directory</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </definition_directory_theme>

                    </fields>
                </scss>

                <template translate="label">
                    <label>Scss Templates Main Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <definition_directory translate="label comment">
                            <label>Directory of the template files</label>
                            <comment />
                            <frontend_type>select</frontend_type>
                            <source_model>blugento_designcustomiser/system_config_source_template_directory</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </definition_directory>
                    </fields>
                </template>
            </groups>
        </blugento_designcustomiser>
    </sections>
</config>
