                        <search_page_noindex_follow translate="label">
                            <label>Add NOINDEX/FOLLOW on search page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>On search page with pagination also.</comment>
                        </search_page_noindex_follow>
                        <use_attributes translate="label">
                            <label>Use Canonical Link Meta Tag For Attributes</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_attributes>
                        <remove_canonical_attributes translate="label">
                            <label>Remove Canonical Link Meta Tag For Filterable Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>blugento_seoenhancements/system_config_source_attributes</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                            <depends>
                                <use_attributes>1</use_attributes>
                            </depends>
                        </remove_canonical_attributes>
                        <force_canonical_attributes translate="label">
                            <label>Force Canonical Link Meta Tag For Filterable Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>blugento_seoenhancements/system_config_source_attributes</source_model>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                            <depends>
                                <use_attributes>1</use_attributes>
                            </depends>
                        </force_canonical_attributes>
                        <category_use_parentcategory translate="label comment">
                            <label>Remove Parent Category Path for Category URLs</label>
                            <comment>If enabled removes all parent categories from the URL path, so that /clothing/shoes becomes /shoes. (*Note: URL reindexing is necessary!)</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_use_parentcategory>
                        <canonical_review translate="label">
                            <label>Include Canonical Link on Review Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </canonical_review>
                        <category_canonical translate="label">
                            <label>Include Canonical Link on Category Page</label>
                            <comment>If enabled, the canonical link apears twice on category filter page. You should disable the other option from Sys - Config - Catalog - Search Engine Optimisations - Use Canonical Link Meta Tag For Categories</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_canonical>
                        <dir_order_canonical translate="label">
                            <label>Canonical on dir and order params</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>71</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If disabled, the canonical link will be removed if dir and order params exist</comment>
                            <depends><category_canonical>1</category_canonical></depends>
                        </dir_order_canonical>
                        <pagination_no_canonical translate="label">
                            <label>No Canonical on Pagination</label>
                            <comment>If enabled, the canonical link will be removed if pagination greater than 1</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>72</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
