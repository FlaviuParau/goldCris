                            <label>New Favicon Icon</label>
                            <comment><![CDATA[Allowed file types: ICO, PNG, GIF, JPG, JPEG. Not all browsers support all these formats!]]></comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>blugento_seoenhancements/system_config_backend_favicon</backend_model>
