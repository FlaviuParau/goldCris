<config>
    <api2>
        <resource_groups>
            <blugento_fullfeed translate="title" module="blugento_fullfeed">
                <title>Blugento Full Feed</title>
                <sort_order>900</sort_order>
            </blugento_fullfeed>
        </resource_groups>
        <resources>
            <blugento_fullfeed translate="title" module="blugento_fullfeed">
                <group>blugento_fullfeed</group>
                <model>blugento_fullfeed/api2_feed</model>
                <title>Full Feed</title>
                <sort_order>50</sort_order>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <attributes module="blugento_fullfeed">
                    <products_feed>Feed Name</products_feed>
                </attributes>
                <routes>
                    <route_entity>
                        <route>/blugento/feed</route>
                        <action_type>entity</action_type>
                    </route_entity>
                </routes>
                <versions>1</versions>
            </blugento_fullfeed>
        </resources>
    </api2>
</config>