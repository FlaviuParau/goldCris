<?xml version="1.0"?>
<config>
    <sections>
        <ajaxlogin translate="label" module="ajaxlogin">
            <label>Ajax Login</label>
            <tab>blugento</tab>
            <sort_order>11</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <options translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <enable_first_login translate="label">
                            <label>Enable First Login</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_first_login>
                        <enable_logo translate="label">
                            <label>Enable Logo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_logo>
                        <button_placement translate="label comment">
                            <label>Button Placement</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxlogin/system_config_source_button_placement</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Determines where buttons for switching tabs are placed]]></comment>
                        </button_placement>
                        <button_action translate="label comment">
                            <label>Button Action</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxlogin/system_config_source_button_action</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Determines which tab will be loaded on click]]></comment>
                        </button_action>
                        <add_cms_block translate="label">
                            <label>Choose CMS Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxlogin/system_config_source_cmsblock</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <button_action>2</button_action>
                            </depends>
                        </add_cms_block>
                    </fields>
                </options>
            </groups>
        </ajaxlogin>
    </sections>
</config>
